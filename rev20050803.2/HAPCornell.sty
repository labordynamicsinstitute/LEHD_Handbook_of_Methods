% Slide style definitions
\newcommand{\TitleSlide}[1]{%
  \psframe[linestyle=none,fillstyle=solid,%
  fillcolor=white](-2.1,-2.1)(12.7,7.4)%
  \Logo(-1.21,7.08){%
    \@ifundefined{HAP@TSNav}%
      {\includegraphics[scale=1.1]{culogo}}%
      {\Acrobatmenu{\HAP@TSNav}{\includegraphics[scale=1.1]{culogo}}}%
    }%
  \psframe[linestyle=none,fillstyle=solid,%
  fillcolor=black](-2.1,7.35)(12.5,7.4)%
  \psframe[linestyle=none,fillstyle=solid,%
  fillcolor=black](-2.1,-.37)(12.5,-.42)%
  \psframe[linestyle=none,fillstyle=solid,%
  fillcolor=cred](-2.1,-1.3)(12.5,-.4)%
  \psframe[linestyle=none,fillstyle=solid,%
  fillcolor=black](-2.1,-1.32)(12.5,-1.27)%
  \PutLogo%
  \HAP@PutLF{tl}{-1.65,-.8}%
  \HAP@PutRF{tr}{11.35,-.8}%
  {#1}}%

\newcommand{\NormalSlide}[1]{%
  \psframe[linestyle=none,fillstyle=solid,%
  fillcolor=white](-2.1,-2.1)(12.7,7.4)%
  \Logo(-1.21,7.08){%
    \@ifundefined{HAP@NSNav}%
      {\includegraphics[scale=1.1]{culogo}}%
      {\Acrobatmenu{\HAP@NSNav}{\includegraphics[scale=1.1]{culogo}}}%
    }%
  \ifHAP@toc%
    \rput[lt](-1.7,6.55){\begin{minipage}[t]{2cm}\HAP@toc\end{minipage}}%
  \fi%
  \psframe[linestyle=none,fillstyle=solid,%
  fillcolor=black](-2.1,7.35)(12.5,7.4)%
  \psframe[linestyle=none,fillstyle=solid,%
  fillcolor=black](-2.1,-.37)(12.5,-.42)%
  \psframe[linestyle=none,fillstyle=solid,%
  fillcolor=cred](-2.1,-1.3)(12.5,-.4)%
  \psframe[linestyle=none,fillstyle=solid,%
  fillcolor=black](-2.1,-1.32)(12.5,-1.27)%
  \PutLogo%
  \HAP@PutLF{tl}{-1.65,-.8}%
  \HAP@PutRF{tr}{11.35,-.8}%
  {#1}}%

