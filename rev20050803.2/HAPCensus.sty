      {\includegraphics[scale=1.5]{census-logo}}%
      {\Acrobatmenu{\HAP@NSNav}{\includegraphics[scale=1]{census-logo}}}%
    }%
  \ifHAP@toc%
    \rput[lt](-1.7,6.55){\begin{minipage}[t]{2cm}%
    {\ifinColor\@fontTocColor\else\@fontTocBW\fi\@title\par}%
    \HAP@toc%
    \end{minipage}}%
  \fi%
% complementary rectangles
  \psframe[linestyle=none,fillstyle=solid,%
  fillcolor=cddblue](-2.1,-2)(12.7,-.49)%
% lines
  \psframe[linestyle=none,fillstyle=solid,%
  fillcolor=clblue](2.1,-.4)(12.5,-.55)%
  \psframe[linestyle=none,fillstyle=solid,%
  fillcolor=clblue](11.4,-2)(11.55,9)%
  \PutLogo%
  \HAP@PutLF{tl}{0,-2}%
  \HAP@PutRF{tr}{11.35,-.8}%
  {#1}}%

