% Slide style definitions
\newcommand{\TitleSlide}[1]{%
  \psframe[linestyle=none,fillstyle=gradient,%
  gradbegin=cgradbegin,gradend=cgradend,
  gradmidpoint=1,gradangle=0]%
  (-2.1,-.51)(12.7,9)%
  \Logo(-1.60,-0.9){%
    \@ifundefined{HAP@TSNav}%
      {\includegraphics[scale=1.5]{census-logo}}%
      {\Acrobatmenu{\HAP@TSNav}{\includegraphics[scale=1]{census-logo}}}%
    }%
% complementary rectangles
  \psframe[linestyle=none,fillstyle=solid,%
  fillcolor=cddblue](-2.1,-2)(12.7,-.49)%
% lines
  \psframe[linestyle=none,fillstyle=solid,%
  fillcolor=clblue](2.1,-.4)(12.5,-.55)%
  \psframe[linestyle=none,fillstyle=solid,%
  fillcolor=clblue](11.4,-2)(11.55,9)%
  \PutLogo%
  \HAP@PutLF{tl}{0,-2}%
  \HAP@PutRF{tr}{11.35,-.8}%
  {#1}}%

\newcommand{\NormalSlide}[1]{%
  \psframe[linestyle=none,fillstyle=gradient,%
  gradbegin=cgradbegin,gradend=cgradend,
  gradmidpoint=1,gradangle=0]%
  (-2.1,-.51)(12.7,9)%
  \Logo(-1.60,-0.9){%
