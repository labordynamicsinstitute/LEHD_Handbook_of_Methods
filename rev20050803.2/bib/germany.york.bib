@TechReport{HarhoffKane94,
  author = 	 "Dietmar Harhoff and Thomas J. Kane",
  title = 	 "Financing Apprenticeship Training: Evidence from Germany",
  institution =  "NBER",
  year = 	 1993,
  type =	 "working paper",
  number =	 4557,
  keywords =	 "training Germany apprenticeship",
  abstract =	 "Much of the current discussion promoting apprenticeship
		  programs in the U.S. proceeds as if it is simply a matter
		  of          historical accident or lack of imagination
		  which has hindered human capital investment by
		  U.S. firms. However, the          cause may be rooted
		  more deeply in our labor market institutions. This paper
		  discusses the structure of incentives
		  undergirding the German system of apprenticeship
		  training. Many German firms face large net costs of
